meta {
  name: create Advertisement
  type: http
  seq: 1
}

post {
  url: {{astraval.com}}/api/admin/ads
  body: multipartForm
  auth: bearer
}

auth:bearer {
  token: {{adminToken}}
}

body:multipart-form {
  ad: '''
    {
      "companyId": 1,
      "itemId": 1,
      "placement": "DASHBOARD_ADS",
      "description": "Big discount this week",
      "actionUrl": "https://your-site.com/offer"
    }
    
  '''
  "file ": @file(Files\ads\1.jpg)
}

settings {
  encodeUrl: true
  timeout: 0
}
